<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:layout_marginEnd="80dp"
        android:background="@drawable/triangle"
        android:rotation="180" />

    <LinearLayout
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/icon_container">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:layout_marginStart="5.7dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/call_icon" />
    </LinearLayout>

    <EditText
        android:id="@+id/new_phone_number"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="36dp"
        android:hint="Phone"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:paddingBottom="15dp"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/icon_container">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:src="@drawable/email_icon" />
    </LinearLayout>

    <EditText
        android:id="@+id/new_user_email"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="96dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:paddingBottom="15dp"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/icon_container">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:src="@drawable/female_icon" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/male_female_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="160dp"
            android:buttonTint="@color/colorAccent" />

        <RadioButton
            android:id="@+id/radio_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="282dp"
            android:layout_marginTop="-32dp"
            android:buttonTint="@color/colorAccent" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="160dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="9dp"
            android:paddingTop="7dp"
            android:paddingRight="2dp"
            android:text="Female"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/icon_container">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:src="@drawable/male_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:layout_marginTop="160dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="7dp"
            android:paddingRight="2dp"
            android:text="Male"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/icon_container">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginStart="8.5dp"
            android:src="@drawable/birthday_icon" />
    </LinearLayout>

    <TextView
        android:id="@+id/dob_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="99dp"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif"
        android:text=".D / .M / ...Y"
        android:textColor="@color/colorAccent"
        android:textSize="15dp" />

    <ImageButton
        android:id="@+id/date_picker"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:layout_marginStart="18dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/edit_icon"
        android:backgroundTint="@color/colorPrimary"
        android:clickable="true" />

    <CheckBox
        android:id="@+id/tandc_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="103dp"
        android:buttonTint="@color/fabColor"
        android:fontFamily="sans-serif"
        android:paddingLeft="5dp"
        android:text="I accept LocBook T and C"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:typeface="normal" />

    <Button
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="@color/fabColor"
        android:clickable="true"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />


</FrameLayout>
