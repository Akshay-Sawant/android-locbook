<resources>
    <!--  Base application theme.  -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--  Customize your theme here.  -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WalletTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">#a3a2a2</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- buttons color -->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <!-- title and message color -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- dialog background -->
        <item name="android:windowBackground">@drawable/dialog_bg</item>
    </style>

    <style name="RatingDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- buttons color -->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <!-- title and message color -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- dialog background -->
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlNormal">@color/dot_inactive</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <!-- buttons color -->
        <item name="colorAccent">@color/fabColor</item>
        <!-- title and message color -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- dialog background -->
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="ErrorDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- buttons color -->
        <item name="colorAccent">@android:color/holo_red_dark</item>
        <!-- title and message color -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <!-- dialog background -->
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>